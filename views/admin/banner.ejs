<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js" defer></script>
  <script>
    var table = document.getElementsByTagName('table')[0],
      rows = table.getElementsByTagName('tr'),
      text = 'textContent' in document ? 'textContent' : 'innerText';
    console.log(text);
    for (var i = 0, len = rows.length; i < len; i++) {
      if (i == 0) {
        continue;
      }
      rows[i].children[0][text] = i + ' ' + rows[i].children[0][text];
    }

    function dltBannerWarning(id,index) {
    Swal.fire({
      title: 'Are you sure?',
      text: "You won't be able to revert this!",
      icon: 'warning',
      showCancelButton: true,
      confirmButtonColor: '#3085d6',
      cancelButtonColor: '#d33',
      confirmButtonText: 'Yes, delete it!',
    }).then((result) => {
      if (result.isConfirmed) {
        deleteBanner(id,index);
      }
    });
  }
  function deleteBanner(id,index) {
    $.ajax({
      url: '/admin/banner/delete-banner',
      method: 'POST',
      data: {
        bannerId: id,
      },
    }).then((response) => {
      if (response.delete == 'success') {
        successAlert('Banner deleted Successfuly');
        $(`#banner_table_body tr:eq(${index})`).remove();
        // location.href='/admin/coupon'
      } else {
        failedAlert('Something went wrong, Please try again later');
        // location.href='/admin/coupon'
      }
    });
    function successAlert(msg) {
      Swal.fire({
        icon: 'success',
        title: msg,
      });
    }
    function failedAlert(msg) {
      Swal.fire({
        icon: 'error',
        title: msg,
      });
    }
  }

  </script>
