                    <% products.forEach(function(x){ %> <%
                        if(x.access==true){%>
                    <div class="col-lg-3 col-sm-6">
                      <div class="single_product_item">
                        <img
                          src="/product_img/<%= x.thumbnail %>"
                          style="height: 200px"
                          alt=""
                        />
                        <div class="single_product_text">
                          <h4><%= x.title %></h4>
                          <h3><%= x.price %></h3>

                          <a onclick="addToCart('<%= x._id %>')" class="add_cart">+ Add to Cart<i class=""></i></a>
                         
                         <!-- <button onclick="addToCart('<%= x._id %>')" class="add_cart"
